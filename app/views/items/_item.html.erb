<div id="<%= dom_id item %>">
  <p>
    <strong>Name:</strong>
    <%= item.name %>
  </p>
  <p>
    <strong>Description:</strong>
    <%= item.description %>
  </p>
  <p>
    <strong>Price:</strong>
    <%= item.price %>
  </p>
  <p>
    <strong>Category:</strong>
    <% if item.category.nil? %>
      -
    <% else %>
      <%= item.category %>
    <% end %>
  </p>
</div>
