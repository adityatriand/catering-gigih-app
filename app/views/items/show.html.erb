<p style="color: green"><%= notice %></p>
<h1>Detail Item</h1>
<%= link_to "Back to items", items_path, {class: "btn btn-secondary mt-3 mb-3"} %>
<div class="card">
  <div class="card-header">
    Item Name : <%= @item[0][:name].capitalize %>
  </div>
  <div class="card-body">
    <%= render @item %>
  </div>
  <div class="d-flex card-footer">
    <%= link_to "Edit this item", edit_item_path(@item), {class: "btn card-button me-3"} %>
    <%= button_to "Destroy this item", @item, method: :delete, class: "btn btn-danger" %>
  </div>
</div>
<div>
</div>
