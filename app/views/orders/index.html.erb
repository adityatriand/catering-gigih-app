<p style="color: green"><%= notice %></p>
<h1>List Orders</h1>
<div class="mt-3">
  <%= link_to "Dashboard", '/',  {class: "btn btn-secondary"} %>
  <%= link_to "New order", new_order_path,  {class: "btn btn-success"} %>
</div>
<div id="orders">
  <div class="row">
    <% @orders.each do |order| %>
      <div class="col-sm-4 mt-5">
        <div class="card">
          <div class="card-header">
            Email Customer : <%= order.email %>
          </div>
          <div class="card-body">
            <%= render order %>
          </div>
          <div class="card-footer text-end">
            <%= link_to "Show this order", order,  {class: "btn card-button"} %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
